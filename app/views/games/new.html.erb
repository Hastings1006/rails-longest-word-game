<h1 class="m-2 p-2" >New game</h1>
<p>
  <% @letters.each do |letter| %>
    <span class="border border-dark p-2 m-1 bg-secondary">
      <%= letter %>
    </span>
  <% end %>
</p>
<form action="/score" method="get" data-turbo="false">
  <label for="suggestion">What is the longest word you can find?</label>
  <input type="text" name="guess">
  <%= hidden_field_tag :letters, @letters %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit" value="Enter">
</form>
